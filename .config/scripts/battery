#!/usr/bin/env bash

for battery in /sys/class/power_supply/BAT?*; do
    [ -n "${capacity+x}" ] && printf " "
    capacity="$(cat "$battery/capacity" 2>&1)"

    case "$(cat "$battery/status" 2>&1)" in
        "Full") status="ğŸ”‹ " ;;
        "Discharging") status="ğŸª« " ;;
        "Charging") status="ğŸŒ€ " ;;
        "Not charging") status="ğŸ”‹ " ;;
        "Unknown") status="â“ " ;;
        *) exit 1 ;;
    esac
    
    if [ "$capacity" -ge 50 ]; then
        status="ğŸ”‹ "
    fi
    [ "$status" = "ğŸª« " ] && [ "$capacity" -le 25 ] && status="â— "
    
    printf "%s%s%d%%" "$warn" "$status" "$capacity"; unset warn
done && printf "\\n"
